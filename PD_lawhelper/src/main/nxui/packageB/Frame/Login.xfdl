	application.open("join","Pattern::V_COM_010.xfdl",this.getOwnerFrame(), 
   {mode:'modeless',ds:this.Dataset01}, "showtitlebar=true", nLeft, nTop);
		
}

this.search_onclick = function(obj:Button,  e:nexacro.ClickEventInfo)
