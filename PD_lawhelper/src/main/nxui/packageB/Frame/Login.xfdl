this.fn_close = function(obj:Button,  e:nexacro.ClickEventInfo)
{
	application.exit();
}

this.div_login_btn_login_onkeyup = function(obj:Button, e:nexacro.KeyEventInfo)
{
	if(e.keycode == 13)
	{
