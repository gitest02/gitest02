    		resultMap="precedentsCommonCodeVO">
    	SELECT
			CODE_NO, 
			CODE_NAME, 
			CLASS_CODE
		FROM
			PD_LAW_CMM_CODE_DETAIL
		WHERE
			CODE_NO IN
			(
    	    SELECT
                 CASECLASSCODE
            FROM 
                (
                SELECT
                	T3.CASECLASSCODE
                FROM
                	(
	                SELECT 
	                    T1.JUDGEDATE,
